<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="CSE301LAB" />

            <TextView
                android:id="@+id/course_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/course_name"
                android:layout_toLeftOf="@+id/course_weekday"
                android:layout_toRightOf="@+id/course_name"
                android:layout_toStartOf="@+id/course_weekday"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Section:10" />

            <TextView
                android:id="@+id/course_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/advising_triangle_button"
                android:layout_toStartOf="@+id/advising_triangle_button"
                android:fontFamily="serif"

                android:text="WeekDay: MW" />

            <RelativeLayout
                android:id="@+id/advising_triangle_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/triangle" />
            </RelativeLayout>

            <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/advising_expand_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_section"
                android:orientation="vertical"
                app:ael_duration="400"
                app:ael_expanded="false">

                <TextView
                    android:id="@+id/course_timefrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Time From: 10:10" />

                <TextView
                    android:id="@+id/course_timeto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:padding="16dp"
                    android:text="Time To: 11:40" />

                <TextView
                    android:id="@+id/course_faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/course_timefrom"
                    android:paddingBottom="6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Faculty: DMRH" />

                <TextView
                    android:id="@+id/course_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/course_timeto"
                    android:paddingBottom="6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Room: 220(Media Room)" />

            </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
