<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_margin="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/calendar_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textStyle="bold"
            android:text="May03"
            />
        <TextView
            android:id="@+id/calendar_event_day"
            android:layout_toEndOf="@+id/calendar_event_date"
            android:layout_toRightOf="@+id/calendar_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textStyle="bold"
            android:text="Tuesday"
            />
        <ImageButton
            android:id="@+id/parent_recycle_item_expand_arrow"
            android:layout_below="@id/calendar_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@android:drawable/arrow_down_float"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>