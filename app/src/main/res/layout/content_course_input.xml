<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4642AB"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.treebricks.ewuhub.ui.CourseInput"
    tools:showIn="@layout/activity_course_input">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/secondary_frame_rl_sv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/secondary_frame_rl_sv_rl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/course_input_description"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp"
                android:textColor="#fbfbfb"
                android:gravity="center"
                android:text="@string/course_input_description"
                android:textSize="30sp"/>


            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/course_one_edit_text_holder"
                app:hintTextAppearance="@style/MyHintText"
                android:layout_below="@+id/course_input_description"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/course_one_edit_text"
                    android:hint="Name of Subject-1(Ex:CSE107)"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                android:id="@+id/course_two_edit_text_holder"
                android:layout_below="@+id/course_one_edit_text_holder"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/course_two_edit_text"
                    android:hint="Name of Subject-2(Ex-PHY109)"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                android:id="@+id/course_three_edit_text_holder"
                android:layout_below="@+id/course_two_edit_text_holder"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/course_three_edit_text"
                    android:hint="Name of Subject-3(Ex:MAT205)"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/MyHintText"
                android:id="@+id/course_four_edit_text_holder"
                android:layout_below="@+id/course_three_edit_text_holder"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/course_four_edit_text"
                    android:hint="Name of Subject-4(Ex:ENG101)"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
