<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4642AB"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.treebricks.ewuhub.ui.SortCourseHome"
    tools:showIn="@layout/activity_sort_course_home">

    <ScrollView
        android:id="@+id/secondary_frame_rl_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/secondary_frame_rl_sv_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sort_course_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/sort_course_description"
                android:textColor="#fbfbfb"
                android:textSize="30sp" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/number_input_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sort_course_description"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="25dp"
                app:counterEnabled="true"
                app:counterMaxLength="1"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/MyHintText">

                <EditText
                    android:id="@+id/total_course_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Number of Subjects"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:theme="@style/MyEditText" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
