<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dip"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="true">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:padding="6dp">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_line"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center"
            android:text="All Course Name"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_line"
            android:layout_below="@+id/header_line"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="1st Course Name and Section"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_line"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:ellipsize="marquee"
            android:layout_marginLeft="6dp"
            android:text="2nd Course Name and Section"
            android:singleLine="true"
            android:textSize="24sp"
            android:id="@+id/second_line" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_line"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:ellipsize="marquee"
            android:layout_marginLeft="6dp"
            android:text="3rd Course Name and Section"
            android:singleLine="true"
            android:textSize="24sp"
            android:id="@+id/third_line" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_line"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:ellipsize="marquee"
            android:text="4th Course Name and Section"
            android:singleLine="true"
            android:textSize="24sp"
            android:id="@+id/fourth_line" />

    </RelativeLayout>

</android.support.v7.widget.CardView>