<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3E55AF"
    android:layout_height="match_parent"
    tools:context="com.treebricks.ewuhub.ui.SplashScreen">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/splash_text"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:id="@+id/splash_dev_logo"
        android:layout_below="@id/imageView"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/treebricks_dev_logo"
        android:contentDescription="Tree Bricks Developer logo" />





</RelativeLayout>
