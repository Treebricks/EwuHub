<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_content"
        style="@style/SelectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/medium_aquamarine"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:cardPreventCornerOverlap="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/ewuhub_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_logo"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="EwuHub is a non-profit application of treebricks."
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ewuhub_credits"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="5dp"
                    android:text="version"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/about_developer"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_below="@+id/card"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/medium_aquamarine"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="aboutDeveloperOnClickHandler"
            android:text="About Developer"

            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/privacy_policy"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_below="@+id/about_developer"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/medium_aquamarine"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="privacyPolicyOnClickHandler"
            android:text="Privacy Policy"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/terms_of_use"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_below="@+id/privacy_policy"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/medium_aquamarine"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="termsOnClickHandler"
            android:text="Terms of Use"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/credits"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_below="@+id/terms_of_use"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/medium_aquamarine"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="creditsOnClickHandler"
            android:text="Credits"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Colored" />

        <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_below="@+id/credits"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/azure"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/fb_blue_72" />

        <ImageView
            android:id="@+id/dev_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/facebook_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp"
            android:src="@drawable/treebricks_dev_logo" />

    </RelativeLayout>

</ScrollView>
